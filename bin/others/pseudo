PROGRAM HitungVolume

DEKLARASI
    flag ← true
    n, p, l, t, r, r2, t2, r3, t3, a, t4 : integer
    volumeBalok, volumeBola, volumeKerucut, volumeSilinder, volumeLimasSegitiga : integer

ALGORITMA
    WHILE flag = true DO
        TULIS "MENU"
        TULIS "0. KELUAR"
        TULIS "1. HITUNG VOLUME BALOK"
        TULIS "2. HITUNG VOLUME BOLA"
        TULIS "3. HITUNG VOLUME KERUCUT"
        TULIS "4. HITUNG VOLUME SILINDER"
        TULIS "5. HITUNG VOLUME LIMAS SEGITIGA"
        TULIS "MASUKKAN PILIHAN ANDA: "
        INPUT n

        SWITCH (n)
            CASE 0:
                flag ← false

            CASE 1:
                TULIS "MASUKKAN PANJANG: "
                INPUT p
                TULIS "MASUKKAN LEBAR: "
                INPUT l
                TULIS "MASUKKAN TINGGI: "
                INPUT t
                volumeBalok ← p * l * t
                TULIS "VOLUME BALOK = ", volumeBalok

            CASE 2:
                TULIS "MASUKKAN JARI-JARI: "
                INPUT r
                volumeBola ← (4/3) * π * r^3
                TULIS "VOLUME BOLA = ", volumeBola

            CASE 3:
                TULIS "MASUKKAN JARI-JARI: "
                INPUT r2
                TULIS "MASUKKAN TINGGI: "
                INPUT t2
                volumeKerucut ← (1/3) * π * r2^2 * t2
                TULIS "VOLUME KERUCUT = ", volumeKerucut

            CASE 4:
                TULIS "MASUKKAN JARI-JARI: "
                INPUT r3
                TULIS "MASUKKAN TINGGI: "
                INPUT t3
                volumeSilinder ← π * r3^2 * t3
                TULIS "VOLUME SILINDER = ", volumeSilinder

            CASE 5:
                TULIS "MASUKKAN ALAS: "
                INPUT a
                TULIS "MASUKKAN TINGGI: "
                INPUT t4
                volumeLimasSegitiga ← (1/3) * (0.5 * a * a) * t4
                TULIS "VOLUME LIMAS SEGITIGA = ", volumeLimasSegitiga

            DEFAULT:
                TULIS "PILIHAN TIDAK VALID"
        END SWITCH
    END WHILE

SELESAI